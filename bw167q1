class Solution {
    public boolean scoreBalance(String s) {
        int total = 0;
        for(int i=0; i<s.length(); i++){
            total += s.charAt(i) - 'a' + 1;
        }
        int left = 0; int right = total;
        for(int i=0; i<s.length()-1; i++){
            left += s.charAt(i) - 'a' + 1;
            right -= s.charAt(i) - 'a' + 1;
            if(left == right) return true;
        }
        return false;
    }
}
