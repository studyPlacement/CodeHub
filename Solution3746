class Solution {
    public int minLengthAfterRemovals(String s) {
        Stack<Character> stk = new Stack<>();
        for(int i=0; i<s.length(); i++){
            char ch = s.charAt(i);
            if(!stk.isEmpty() && ((ch == 'a' && stk.peek() == 'b') || (ch == 'b' && stk.peek() == 'a'))){
                stk.pop();
            } else {
                stk.push(ch);
            }
        }
        return stk.size();
    }
}
